type: update
name: Anti-virus
baseUrl: https://raw.githubusercontent.com/panslothda/Jelastic_Addon_AV-Scanner/master/
version: 0.1
description: 
  text: Virus Scan protection with Clamav
short: Virus Scan protection with Clamav
    
logo: clamav-logo.png
globals:
  env: ${env.name}
     
targetNodes:
  nodeGroup:
    - bl 
    - cp
    - storage

onInstall:
  cmd [*]:
    - yum install -y epel-release 
    - yum install -y clamav 
  user: root
  sayYes: true

onUninstall:
  cmd [*]:
    - yum remove -y clamav
    - yum remove -y epel-release 
    - cmd[${targetNodes.nodeGroup}]: |-
        rm -rf /var/log/clamav
        rm -rf /var/lib/clamav
        rm -rf /usr/share/clamav
  user: root
  sayYes: true

buttons:
  - confirmText: Do you want to run a Scan of the full Node?
    loadingText: Scanning...
    action: scan
    caption: Scan Now

  - confirmText: Do you want to run a Update of the Clamav DB?
    loadingText: Updating
    action: update
    caption: Update DB

actions:
  scan:
    install:
      jps: scan.jps
  
  update:
    install:
      jps: update-db.jps

success:
  text:  success.md
